{
  "name": "whirlombre",
  "version": "1.1.0",
  "description": "ðŸ’« A super-minimal library to generate smooth shades",
  "author": "Jeffrey Turns <jeffreyturns@protonmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jeffreyturns/whirlombre#README",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffreyturns/whirlombre.git"
  },
  "bugs": "https://github.com/jeffreyturns/whirlombre/issues",
  "keywords": [],
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm build-fast --dts-resolve",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "update-deps": "taze -w && pnpm i",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^1.5.4",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "taze": "^0.13.1",
    "tsup": "8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
